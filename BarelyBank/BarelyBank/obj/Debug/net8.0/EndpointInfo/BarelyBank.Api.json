  "components": {
    "schemas": {
      "AccountInputModel": {
        "required": [
          "clientId",
          "status",
          "type"
        ],
        "type": "object",
        "properties": {
          "clientId": {
            "type": "string",
            "format": "uuid"
          },
          "type": {
            "$ref": "#/components/schemas/AccountType"
          },
          "status": {
            "$ref": "#/components/schemas/AccountStatus"
          }
        },
        "additionalProperties": false
      },
      "AccountStatus": {
        "enum": [
          0,
          1
        ],
        "type": "integer",
        "format": "int32"
      },
      "AccountType": {
        "enum": [
          0,
          1
        ],
        "type": "integer",
        "format": "int32"
      },
      "AccountViewModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "number": {
            "type": "integer",
            "format": "int32"
          },
          "balance": {
            "type": "number",
            "format": "double"
          },
          "fee": {
            "type": "number",
            "format": "double"
          },
          "status": {
            "$ref": "#/components/schemas/AccountStatus"
          },
          "type": {
            "$ref": "#/components/schemas/AccountType"
          },
          "holder": {
            "$ref": "#/components/schemas/ClientViewModel"
          }
        },
        "additionalProperties": false
      },
      "ClientInputModel": {
        "required": [
          "birthDate",
          "confirmPassword",
          "documentNumber",
          "email",
          "name",
          "password"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "birthDate": {
            "type": "string",
            "format": "date-time"
          },
          "documentNumber": {
            "maxLength": 14,
            "minLength": 0,
            "pattern": "\\d{3}\\.\\d{3}\\.\\d{3}-\\d{2}",
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 8,
            "type": "string"
          },
          "confirmPassword": {
            "minLength": 8,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ClientViewModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "documentNumber": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginInputModel": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "TransferInputModel": {
        "required": [
          "amount",
          "sourceAccountId",
          "targetAccountId"
        ],
        "type": "object",
        "properties": {
          "sourceAccountId": {
            "type": "string",
            "format": "uuid"
          },
          "targetAccountId": {
            "type": "string",
            "format": "uuid"
          },
          "amount": {
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "TransferViewModel": {
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "format": "double"
          },
          "feeAmont": {
            "type": "number",
            "format": "double"
          },
          "total": {
            "type": "number",
            "format": "double",
            "readOnly": true
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "sourceAccountId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          },
          "sourceAccountHolder": {
            "type": "string",
            "nullable": true
          },
          "sourceAccountNumber": {
            "type": "integer",
            "format": "int32"
          },
          "targetAccountId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          },
          "targetAccountHolder": {
            "type": "string",
            "nullable": true
          },
          "targetAccountNumber": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "JWT Authorization header using the Bearer scheme. Example: \"Authorization: Bearer {token}\"",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
