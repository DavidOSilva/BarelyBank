{
  "openapi": "3.0.1",
  "info": {
    "title": "BarelyBank.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/Client/register": {
      "post": {
        "tags": [
          "Client"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClientInputModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ClientInputModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ClientInputModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ClientInputModel": {
        "required": [
          "birthDate",
          "confirmPassword",
          "documentNumber",
          "email",
          "name",
          "password"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "birthDate": {
            "type": "string",
            "format": "date-time"
          },
          "documentNumber": {
            "maxLength": 14,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 8,
            "type": "string"
          },
          "confirmPassword": {
            "minLength": 8,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}